<Page x:Class="quiz.ChangeText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quiz"
        mc:Ignorable="d"
        Title="Zmiana tekstu" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Text="© Daria Wiśniewska" Margin="10" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        <TextBlock Grid.Row="1" Text="Do użytku wewnętrznego Auchan Częstochowa Północ" Margin="10" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
        <TextBox Grid.Row="0" Name="hehe" HorizontalAlignment="Center" Height="150"  Margin="20,50"  TextWrapping="Wrap" VerticalAlignment="Top" Width="350"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="20" Padding="5" TextWrapping="Wrap" Text="Wpisz tekst poniżej" VerticalAlignment="Top"/>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,0,25,20" VerticalAlignment="Bottom" Width="75" Click="Button_Click"/>


        <Grid.Background>
            <ImageBrush ImageSource="bg/tlo.jpg" />
        </Grid.Background>
    </Grid>
</Page>
